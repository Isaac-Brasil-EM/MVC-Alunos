@model IEnumerable<MVCAlunos.Models.Aluno>

@{
    ViewData["Title"] = "Tabela de Alunos";
}

<h1>Tabela de Alunos</h1>

<p>
    <a asp-action="Create" style="color: inherit; text-decoration: none;">
        <button type="button" class="btn btn-dark">
            Adicionar Aluno
        </button>
    </a>
    <form asp-controller="Alunos" asp-action="Index" method="get">
        <div>
            <input type="radio" id="nome" name="option" value="nome" checked>
            <label for="nome">Nome</label>
            <input type="radio" id="matricula" name="option" value="matricula">
            <label for="matricula">Matrícula</label>
        </div>
        <div class="input-group mb-3" style="width: 20em;">
            <input type="text" name="SearchString" placeholder="Insira nome/matricula"  class="form-control"/>
            <input type="submit" value="Filter" class="btn btn-outline-secondary"/>
        </div>
    </form>

</p>
<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Alunos)
        {
            <tr>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Matricula)*@
                    @item.MATRICULA
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Nome)*@
                    @item.NOME
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Sexo)*@
                    @item.SEXO
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Nascimento)*@
                    @item.NASCIMENTO.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Cpf)*@
                    @item.CPF
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MATRICULA" style="color: inherit; text-decoration: none;">
                        <button type="button" class="btn btn-outline-primary">
                            <i class="bi bi-pencil-fill"></i>
                        </button>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.MATRICULA" style="color: inherit; text-decoration: none;">
                        <button type="button" class="btn btn-outline-primary">
                            <i class="bi bi-list"></i>
                        </button>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.MATRICULA" style="color: inherit; text-decoration: none;">
                        <button type="button" class="btn btn-outline-danger">
                            <i class="bi bi-trash-fill"></i>
                        </button>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
