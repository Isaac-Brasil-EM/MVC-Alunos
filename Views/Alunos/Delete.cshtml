@model MVCAlunos.Models.Aluno

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3 style="color: red;">Tem Certeza que quer deletar esse aluno?</h3>
<div>
    <h4>Aluno</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Alunos

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)

        </dt>
        <dd class="col-sm-10">
            @ViewBag.Alunos

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nascimento)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Alunos

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sexo)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Alunos

        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Matricula" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">
            <button type="button" class="btn btn-dark">
                Voltar
            </button>
        </a>
    </form>
</div>
